@page
@using AutocrossPublicWebApp.Models;
@model IEnumerable<ResultsModel>
@{
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model) //will create a box/button for every entity in the club Db in sql.
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p> <!--Title is the header for the column in the sql table. item will be the row iterated by the loop.-->
                            <p class="card-text">@item.AutoxClass</p> <!--Description is the header for the column in the sql table. -->
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <!--This is the view button for the Event page. Currently not needed.

                                        <a type="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id=" item.Id"
                                       class="btn btn sm btn-outline-secondary">View
                                    </a>
                                    -->
                                </div>
                                int count = 0;
                                @foreach(var time in @item.FinalTimes) {
                                    <small class="text-muted">@item.FinalTimes</small> <!--ClubCategory is the header for the column in the sql table. -->
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
